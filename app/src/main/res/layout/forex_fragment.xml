<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.forex.Forex"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/forexContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/forexHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Exchange Rates Notifier"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCurrencySelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/forexHeading"
                app:layout_constraintLeft_toRightOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false"
                        android:layout_marginBottom="20dp">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Source"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <Spinner
                                android:id="@+id/forexSourceSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:spinnerMode="dropdown" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Destination"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <Spinner
                                android:id="@+id/forexTargetSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:spinnerMode="dropdown" />

                        </FrameLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_checkValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check Value"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cvCurrencySelector"
                app:layout_constraintLeft_toRightOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="The exchange value for USD to INR,"
                        android:gravity="bottom"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/forexValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12.45"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center_horizontal"
                        android:textSize="35sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="set Notification"
                        android:fontFamily="@font/open_sans_semibold"
                        android:background="@drawable/bg_button_notification" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>