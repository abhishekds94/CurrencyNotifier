<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.forex.Forex"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forexHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/forex_header"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCurrencySelector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/forexHeading"
                app:layout_constraintLeft_toRightOf="parent"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:baselineAligned="false"
                        android:layout_marginBottom="20dp">

                        <Spinner
                            android:id="@+id/forexSourceSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:spinnerMode="dropdown"
                            android:background="@drawable/spinner_background"
                            tools:listitem="@layout/spinner_items" />

                        <Spinner
                            android:id="@+id/forexTargetSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:spinnerMode="dropdown"
                            android:background="@drawable/spinner_background"
                            tools:listitem="@layout/spinner_items"
                            android:dropDownHeight="50dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_checkValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/check_value_btn"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/forexValueContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cvCurrencySelector"
                app:layout_constraintLeft_toRightOf="parent"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/forexValText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="The exchange value for USD to INR,"
                        android:gravity="bottom"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/forexValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="12.45"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center_horizontal"
                        android:textSize="35sp" />

                    <Button
                        android:id="@+id/setNotificationButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/set_notification_btn"
                        android:fontFamily="@font/open_sans_semibold"
                        android:background="@drawable/bg_button_notification" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>